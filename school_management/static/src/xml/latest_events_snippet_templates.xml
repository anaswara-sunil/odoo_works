<template id="latest_event_template" name="Latest Events">
    <t t-name="school_management.latest_event">
        <div id="latest_events_carousel" class="container">
            <center>
                <h2>Latest Events</h2>
            </center>
            <div class="row">
                <t t-foreach="events" t-as="item" t-key="data_index">
                    <div class="col-md-3">
                        <div class="card mb-4">
                            <center>
                                <div class="card-body">
                                    <t t-if="item.event_poster">
                                        <img class="card-img-top" t-attf-src="data:image/jpg;base64,{{item.event_poster}}"/>
                                    </t>
                                    <t t-else="">
                                        <img class="card-img-top"
                                             t-attf-src="https://www.adobe.com/content/dam/www/us/en/events/overview-page/eventshub_evergreen_opengraph_1200x630_2x.jpg"/>
                                    </t>
                                    <h5 class="card-title">
                                        <a t-attf-href="/event/{{item.id}}">
                                            <t t-esc="item.name"/>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        <b>Start Date:</b>
                                        <t t-esc="item.start_date"/>
                                    </p>
                                    <p class="card-text">
                                        <b>End Date:</b>
                                        <t t-esc="item.end_date"/>
                                    </p>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</template>
